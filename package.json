{
  "name": "@schoolpalm/message-bridge",
  "version": "1.3.0",
  "description": "TypeScript SDK for message-based communication between SchoolPalm host and vendor modules.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",

  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },

  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "AUTHORS"
  ],

  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },

  "keywords": [
    "schoolpalm",
    "vue",
    "inertia",
    "module",
    "iframe",
    "postMessage",
    "typescript"
  ],
  "author": "Hassan Mugabo",
  "license": "MIT",

  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^6.5.1",
    "@typescript-eslint/parser": "^6.5.1",
    "eslint": "^8.50.0",
    "jsdom": "^27.4.0",
    "typescript": "^5.2.2",
    "vitest": "^4.0.16"
  }
}
